<%- model_class = Patient -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:first_name) %></th>
      <th><%= model_class.human_attribute_name(:second_name) %></th>
      <th><%= model_class.human_attribute_name(:first_surname) %></th>
      <th><%= model_class.human_attribute_name(:second_surname) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:type_document) %></th>
      <th><%= model_class.human_attribute_name(:document) %></th>
      <th><%= model_class.human_attribute_name(:days_age) %></th>
      <th><%= model_class.human_attribute_name(:months_age) %></th>
      <th><%= model_class.human_attribute_name(:years_age) %></th>
      <th><%= model_class.human_attribute_name(:birthdate) %></th>
      <th><%= model_class.human_attribute_name(:gender) %></th>
      <th><%= model_class.human_attribute_name(:profession) %></th>
      <th><%= model_class.human_attribute_name(:blood_type) %></th>
      <th><%= model_class.human_attribute_name(:nacionality) %></th>
      <th><%= model_class.human_attribute_name(:eps_id) %></th>
      <th><%= model_class.human_attribute_name(:arl_id) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:condition) %></th>
      <th><%= model_class.human_attribute_name(:accompanist_name) %></th>
      <th><%= model_class.human_attribute_name(:relationship) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:city_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.id, patient_path(patient) %></td>
        <td><%= patient.first_name %></td>
        <td><%= patient.second_name %></td>
        <td><%= patient.first_surname %></td>
        <td><%= patient.second_surname %></td>
        <td><%= patient.email %></td>
        <td><%= patient.type_document %></td>
        <td><%= patient.document %></td>
        <td><%= patient.days_age %></td>
        <td><%= patient.months_age %></td>
        <td><%= patient.years_age %></td>
        <td><%= patient.birthdate %></td>
        <td><%= patient.gender %></td>
        <td><%= patient.profession %></td>
        <td><%= patient.blood_type %></td>
        <td><%= patient.nacionality %></td>
        <td><%= patient.eps_id %></td>
        <td><%= patient.arl_id %></td>
        <td><%= patient.address %></td>
        <td><%= patient.condition %></td>
        <td><%= patient.accompanist_name %></td>
        <td><%= patient.relationship %></td>
        <td><%= patient.phone %></td>
        <td><%= patient.city_id %></td>
        <td><%= patient.user_id %></td>
        <td><%=l patient.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_patient_path(patient), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      patient_path(patient),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_patient_path,
            :class => 'btn btn-primary' %>
